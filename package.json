{
  "name": "vscode-plain-sidebar",
  "displayName": "Plain Sidebar",
  "description": "Declutter the window with a plain and empty sidebar.",
  "publisher": "bithappens",
  "license": "MIT",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bithappens/vscode-plain-sidebar"
  },
  "icon": "static/icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "empty",
    "focus",
    "declutter",
    "space",
    "simple",
    "minimal",
    "less is more",
    "hello world"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "plain-sidebar-container",
          "title": "Empty",
          "icon": "static/plainSidebar.svg"
        }
      ]
    },
    "views": {
      "plain-sidebar-container": [
        {
          "type": "webview",
          "id": "plain-sidebar",
          "name": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run lint",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "@types/vscode": ">=1.75.0",
    "@vscode/vsce": "^3.5.0",
    "eslint": "^9.28.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "globals": "^16.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
