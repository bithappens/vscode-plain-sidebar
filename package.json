{
  "name": "vscode-plain-sidebar",
  "displayName": "Plain Sidebar",
  "description": "Declutter vscode with a plain and empty sidebar.",
  "publisher": "bithappens",
  "license": "MIT",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bithappens/vscode-plain-sidebar"
  },
  "icon": "static/icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "empty",
    "focus",
    "declutter",
    "space",
    "simple",
    "minimal"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "plain-sidebar-container",
          "title": "Empty",
          "icon": "static/plainSidebar.svg"
        }
      ]
    },
    "views": {
      "plain-sidebar-container": [
        {
          "type": "webview",
          "id": "plain-sidebar",
          "name": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run lint",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.6.3",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "eslint": "^8.50.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.2.2",
    "@vscode/vsce": "^2.21.0"
  }
}
